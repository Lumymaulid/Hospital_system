<!DOCTYPE html>
<html>
<head>
  <title>Patient Registration Form</title>
  <style>
    .container {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
    }

    .logo {
      background: none;
    }

    .logo img {
      max-width: 150px;
      background-color: transparent;
    }

    nav ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }

    nav ul li {
      display: inline;
      margin-right: 20px;
    }

    nav ul li a {
      text-decoration: none;
      font-size: 18px;
      transition: color 0.3s;
    }

    nav ul li a:hover {
      color: #095a02;
    }

    h1 {
      text-align: center;
    }

    label {
      display: block;
      margin-bottom: 10px;
    }

    input[type="text"],
    input[type="number"],
    input[type="address"],
    input[type="tel"],
    textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 20px;
    }

    button[type="submit"] {
      width: 100%;
      padding: 10px;
      background-color: #095a02;
      color: white;
      border: none;
      cursor: pointer;
    }

    button[type="submit"]:hover {
      background-color: #45a049;
    }

    #patient-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    #patient-table th,
    #patient-table td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    #patient-table th {
      background-color: #f2f2f2;
    }

    #patient-table tr:hover {
      background-color: #f5f5f5;
    }
  </style>
</head>
<body>
  <header>
    <div class="logo">
      <img src="hms.jpg" alt="Hospital Logo">
    </div>
    <nav>
      <ul>
        <li><a href="/">Home Page</a></li>
        <li><a href="/services">Services</a></li>
        <li><a href="/doctor">Doctors</a></li>
        <li><a href="/register">Registration</a></li>
        <li><a href="/appointment">Appointments</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>
  </header>
  <div class="container">
    <h1 style="color: #095a02;">Patient Registration Form</h1>
    <form id="registration-form" method="POST" action="/submit">
      <label for="name-input">Name:</label>
      <input type="text" id="name-input" name="name" required><br>

      <label for="age-input">Age:</label>
      <input type="number" id="age-input" name="age" required><br>

      <label for="address-input">Address:</label>
      <input type="text" id="address-input" name="address" required><br>

      <label for="phone-input">Phone:</label>
      <input type="tel" id="phone-input" name="phone" required><br>

      <label for="medical-history-input">Medical History:</label>
      <input id="medical-history-input" name="medicalHistory" rows="5" required><br>

      <button type="submit">Register</button>
    </form>

    <table id="patient-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Medical History</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% register.forEach(function(reg) { %>
          <tr data-id="<%= reg.id %>">
            <td><%= reg.name %></td>
            <td><%= reg.age %></td>
            <td><%= reg.address %></td>
            <td><%= reg.phone %></td>
            <td><%= reg.medicalhistory %></td>
            <td>
              <button class="edit-button" data-id="<%= reg.id %>">Edit</button>
              <form class="delete-form" method="POST" action="/delete">
                <input type="hidden" name="row-id" value="<%= reg.id %>">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script>
    const editButtons = document.querySelectorAll(".edit-button");
    editButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const rowId = button.getAttribute("data-id");
        const row = document.querySelector(`tr[data-id="${rowId}"]`);
        const name = row.cells[0].textContent;
        const age = row.cells[1].textContent;
        const address = row.cells[2].textContent;
        const phone = row.cells[3].textContent;
        const medicalHistory = row.cells[4].textContent;

        document.getElementById("name-input").value = name;
        document.getElementById("age-input").value = age;
        document.getElementById("address-input").value = address;
        document.getElementById("phone-input").value = phone;
        document.getElementById("medical-history-input").value = medicalHistory;
        document.getElementById("registration-form").scrollIntoView({ behavior: "smooth" });
      });
      });
    
  </script>
</body>
</html>
