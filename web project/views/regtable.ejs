<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>patient table</title>
    
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
    }
    .logo {
  background: none;

}

.logo img {
  max-width: 150px;
  background-color: transparent;
}

nav ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

nav ul li {
  display: inline;
  margin-right: 20px;
}

nav ul li a {
  text-decoration: none;
  
  font-size: 18px;
  transition: color 0.3s;
}

nav ul li a:hover {
  color: #095a02;
}
    h1 {
      text-align: center;
      color: #333;
    }
    </style>
</head>
<body>
    <table id="atttable">
        <thead>
          <tr>
            <th>name</th>
            <th>age</th>
            <th>address</th>
            <th>phone</th>
            <th>medicalHistory</th>
            
          </tr>
        </thead>
          <tbody>
            <header>
                <div class="logo">
                  <img src="hms.jpg" alt="Hospital Logo">
                </div>
                <nav>
                  <ul>
                    
                    <li><a href="/services">Services</a></li>
                    <li><a href="/doctor">Doctors</a></li>
                    <li><a href="/Registration">Registration</a></li>
                    <li><a href="/appointment">Appointments</a></li>
                    <li><a href="/contact">Contact</a></li>
                  </ul>
                </nav>
              </header>
            <% regtable.forEach(function(tend){ %>
            <tr>
              <td><%= tend.name %></td>
              <td><%= tend.age %></td>
              <td><%= tend.address %></td>
              <td><%= tend.phone %></td>
              <td><%= tend.medicalHistory %></td>
              <td class="actions">
              
                <a href="/edit1/<%= tend.name %>" class="btn btn-update">Update</a>

              <a href="/delete/<%= tend.id %>" class="btn btn-delete" onclick="deleteregistration('<%= tend.id%>')">Delete</a>

              </td>
            </tr>
            <% }); %>
          </tbody>
        
 
          
      </table>
    </div>
</body>
</html>