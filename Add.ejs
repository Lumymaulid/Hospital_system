<!DOCTYPE html>
<html>
<head>
  <title>Contact Form</title>
  <style>
    body {
      background-color: #f8f9fa;
    }
    h2 {
      color: #28a745;
    }
    form {
      margin-top: 30px;
    }
    label {
      display: block;
      margin-bottom: 10px;
      font-weight: bold;
      color: #28a745;
    }
    input[type="text"], input[type="tel"] {
      width: 100%;
      padding: 8px;
      margin-bottom: 20px;
      border: 1px solid #dee2e6;
      border-radius: 4px;
      background-color: #ffffff;
    }
    input[type="submit"] {
      background-color: #28a745;
      color: #ffffff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h2>Contact Information</h2>
  <form action="/save" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= registration.name || '' %>" required>

    <label for="age">Age:</label>
    <input type="text" id="age" name="age" value="<%= registration.age || '' %>" required>

    <label for="address">Address:</label>
    <input type="text" id="address" name="address" value="<%= registration.address || '' %>" required>

    <label for="phone">Phone Number:</label>
    <input type="tel" id="phone" name="phone" value="<%= registration.phone || '' %>" required>

    <label for="medicalhistory">Medical History:</label>
    <input type="text" id="medicalhistory" name="medicalhistory" value="<%= registration.medicalhistory || '' %>" required>

    <input type="submit" value="Submit">
  </form>
</body>
</html>
